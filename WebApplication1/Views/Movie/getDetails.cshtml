@model IEnumerable<WebApplication1.Models.Movie>

@{
    ViewBag.Title = "Movie-Details";
}

<h2>Movie_Details</h2>

<div>
    <h4>Movie</h4>
    <hr />
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Movie_id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Movie_title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Director)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ReleaseDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Movie_Rating)
            </th>
            <th>
                Action
            </th>
        </tr>
         @foreach (var result in Model)
         {
        <tr>
            <td>
                @Html.DisplayFor(Model => result.Movie_id)
            </td>
            <td>
                @Html.DisplayFor(Model => result.Movie_title)
            </td>
            <td>
                @Html.DisplayFor(Model => result.Director)
            </td>
            <td>
                @Html.DisplayFor(Model => result.ReleaseDate)
            </td>
            <td>
                @Html.DisplayFor(Model => result.Movie_Rating)
            </td>
            <td>
                @Html.ActionLink("Edit", "ModifyMovie", new { id = result.Movie_id})
            </td>
        </tr>
         }
    </table>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { /* id = Model.PrimaryKey */ }) |
    @Html.ActionLink("Back to List", "getDetails")
</p>
